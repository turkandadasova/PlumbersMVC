@using PlumbersMVC.Models
@model List<Employer>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Doctor List</h6>
        <a asp-action="Create" class="btn btn-outline-primary ml-auto">Create</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">PhoneNumber</th>


                    <th colspan="2" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model ?? [])
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        @* <td><img src="~/imgs/products/@item.CoverFile" width="50" /></td> *@
                         <td>@item.Department.Name</td>
                       
                       

                        <td>
                            <a class="btn btn-success" asp-action="Update"  asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete"  asp-route-id="@item.Id">Delete</a>
                        </td>
                     

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>